@model IEnumerable<PetStore.Web.ViewModels.Categories.CategoryListViewModel>

@{
    ViewData["Title"] = "Category List";
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-outline-primary" asp-area="" asp-controller="Category" asp-action="Create">Add Category</a>
<div class="container-sm">
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th/>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td class="table-striped">@Html.DisplayName(category.Name)</td>
            <td>
                <div class="btn-group">
                <a type="button" class="btn btn-outline-primary" asp-area="" asp-route-id="@category.Id" asp-action="Edit">Edit</a>
                <form asp-action="Delete" asp-route-id="@category.Id" onsubmit="confirm('Are you sure you want to delete this record?')">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>