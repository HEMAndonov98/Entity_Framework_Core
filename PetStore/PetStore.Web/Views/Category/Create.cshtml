@using PetStore.Common
@model PetStore.Web.ViewModels.Categories.CreateCategoryInputModel

@{
    ViewData["Title"] = "Create";
}

<h4>Create Category</h4>
<hr />
<div class="row">
<div class="col-md-4">
    <form asp-action="Create" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"/>
        <div class="form-group">
            <label asp-for="Name" class="form-horizontal"></label>
            <input asp-for="Name" class="form-control" required="true" minlength="@CategoryInputValidationConstants.NameMinLength.ToString()" maxlength="@CategoryInputValidationConstants.NameMaxLength.ToString()" aria-errormessage="@CategoryInputValidationConstants.InvalidNameLengthErrorMessage" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="All">To List</a>
        </div>
    </form>
</div>
</div>
